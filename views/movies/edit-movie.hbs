<!-- views/movies/edit-movie.hbs -->

<h2>Edit Movie</h2>

<form action="/movies/{{movie._id}}" method="POST">
  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{movie.title}}" required>
  </div>
  <div>
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" value="{{movie.genre}}" required>
  </div>
  <div>
    <label for="plot">Plot:</label>
    <textarea id="plot" name="plot" rows="4" cols="50" required>{{movie.plot}}</textarea>
  </div>
  <div>
    <label for="cast">Cast:</label>
    <select id="cast" name="cast" multiple required>
      {{#each celebrities}}
        <option value="{{this._id}}" {{#if movie.cast.includes this._id}}selected{{/if}}>{{this.name}}</option>
      {{/each}}
    </select>
  </div>
  <button type="submit">Save Changes</button>
</form>
